@model FootBallWebLaba1.Models.Match

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MatchId" />
            <div class="form-group">
                <label asp-for="MatchDate" class="control-label"></label>
                <input asp-for="MatchDate" class="form-control" />
                <span asp-validation-for="MatchDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatchDuration" class="control-label"></label>
                <input asp-for="MatchDuration" class="form-control" />
                <span asp-validation-for="MatchDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaidumId" class="control-label"></label>
                <select asp-for="StaidumId" class="form-control" asp-items="ViewBag.StaidumId"></select>
                <span asp-validation-for="StaidumId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HostClubId" class="control-label"></label>
                <select asp-for="HostClubId" class="form-control" asp-items="ViewBag.HostClubId"></select>
                <span asp-validation-for="HostClubId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestClubId" class="control-label"></label>
                <select asp-for="GuestClubId" class="form-control" asp-items="ViewBag.GuestClubId"></select>
                <span asp-validation-for="GuestClubId" class="text-danger"></span>
            </div>
            
            <input type="hidden" value="@ViewBag.ChampionshipId" name="ChampionshipId" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
