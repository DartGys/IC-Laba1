@model IEnumerable<FootBallWebLaba1.Models.Stadium>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StadiumLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StadiumCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StadiumEstablismentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StadiumLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StadiumCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StadiumEstablismentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Club.ClubName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StadiumId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StadiumId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StadiumId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
